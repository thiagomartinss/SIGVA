<script src="/js/servico/gerenciarServico.js"></script>
<div class="d-flex">
    <aside class="sidebar d-flex flex-column">
        <ul class="nav flex-column flex-grow-1">
            <li class="nav-item">
                <a class="nav-link" href="../admin"><i class="fa-solid fa-house fa-fw"></i> Início</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fa-solid fa-boxes-stacked fa-fw"></i> Produtos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fa-solid fa-list fa-fw"></i> Serviços</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="#"><i class="fa-solid fa-tags fa-fw"></i> Marcas</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fa-solid fa-user fa-fw"></i> Usuários</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fa-solid fa-users fa-fw"></i> Perfis</a>
            </li>
        </ul>
    </aside>
    <!--conteudo principal-->
    <div class="container-fluid flex-grow-1 p-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1 class="text-uppercase text-green100">Serviços</h1>
            <a href="#" class="btn btn-success text-uppercase bg-green200"  data-bs-toggle="modal" data-bs-target="#modalServico"><i class="fa-solid fa-plus"></i> Novo</a>
        </div>
        <hr>
        <div class="table-responsive" style="margin-top: 15px;">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Descrição</th>
                        <th>Valor</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% lista.map(function(value, index) { %>
                        <tr>
                            <td><%= value.servicoId %></td>
                            <td><%= value.servicoDesc %></td>
                            <td><%= value.servicoValor %></td>
                            <td>
                                <a href="#" class="btn btn-primary btnAlteracao" data-bs-toggle="modal" data-bs-target="#modalServicoAlt" data-id="<%= value.servicoId %>" data-nome="<%= value.servicoDesc %>" data-valor="<%= value.servicoValor %>"><i class="fas fa-pen"></i></a>
                                <button class="btn btn-danger btnExclusao" data-bs-toggle="modal" data-bs-target="#modalServicoDel" data-id="<%= value.servicoId %>" data-nome="<%= value.servicoDesc %>" data-valor="<%= value.servicoValor %>"><i class="fas fa-trash"></i></button>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="modal fade" id="modalServico">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Cadastro de Serviços</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>  
                    <div class="modal-body">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="descricaoServico" placeholder="Serviços">
                            <label for="descricaoServico">Serviço</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-success bg-green200" id="btnCadastrar">Cadastrar</button>
                    </div>
                </div>
            </div>
        </div>
        <!--alterar-->
        <div class="modal fade" id="modalServicoAlt">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Editar Serviço</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>  
                    <div class="modal-body">
                        <input type="hidden" id="idServicoAlt" value="">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="descricaoServicoAlt" placeholder="Serviço" value="" >
                            <label for="descricaoServicoAlt">Serviço</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-success bg-green200" id="btnAlterar">Alterar</button>
                    </div>
                </div>
            </div>
        </div>
        <!--excluir-->
        <div class="modal fade" id="modalServicoDel">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirmar a exclusão da Serviço</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div> 
                    <div class="modal-body">
                        <div class="form-floating mb-3">
                            <p>Você tem certeza que deseja excluir o Serviço abaixo?</p>
                            <p><strong>Código:</strong> <span id="codigoExclusao"></span></p>
                            <p><strong>Servico:</strong> <span id="nomeExclusao"></span></p>
                            <input type="hidden" id="idServicoExcluir" value="">
                        </div>
                    </div> 
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-danger" id="btnExcluir">Excluir</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>