<script src="/js/ordemServico/editarOs.js"></script>
<script>
    
</script>
<div class="d-flex">
    <aside class="sidebar d-flex flex-column">
        <ul class="nav flex-column flex-grow-1">
            <li class="nav-item"><a class="nav-link" href="/admin"><i class="fa-solid fa-house fa-fw"></i> Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/ordemServico/criar"><i class="fa-solid fa-clipboard-list fa-fw"></i>Criar OS</a></li>
            <li class="nav-item"><a class="nav-link" href="/ordemServico/listar"><i class="fa-solid fa-clipboard-list fa-fw"></i>Listar OS</a></li>
            <hr />
            <li class="nav-item"><a class="nav-link" href="/login/logout"><i class="fa-solid fa-right-from-bracket fa-fw"></i> Sair</a></li>
        </ul>
    </aside>

    <div class="container my-5">
        <div class="card shadow-sm border-primary">
            <div class="card-header bg-primary text-white py-3">
                <h2 class="text-uppercase mb-0"><i class="fa-solid fa-pen-to-square me-2"></i>Editar Ordem de Serviço #<%= dadosOs.os.ID_OS %></h2>
            </div>
            
            <div class="card-body p-4">
                <form id="formEditarOS">
                    <input type="hidden" id="editIdOs" value="<%= dadosOs.os.ID_OS %>">
                    
                    <h5 class="text-secondary mb-3 border-bottom pb-2">Dados do Cliente</h5>
                    <input type="hidden" id="clienteId" value="<%= dadosOs.os.PESSOA_ID_PESSOA %>">
                    <input type="hidden" id="clienteEnderecoId" value="<%= dadosOs.os.PESSOA_ENDERECO_ID_ENDERECO %>">
                    
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" value="Cliente ID: <%= dadosOs.os.PESSOA_ID_PESSOA %> (Visualização)" readonly> 
                                <label>Cliente Selecionado</label>
                            </div>
                        </div>
                    </div>

                    <h5 class="text-secondary mb-3 border-bottom pb-2 mt-4">Descrição Geral</h5>
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control text-uppercase" id="descServico" style="height: 100px" required><%= dadosOs.os.DESC_SERVICO %></textarea>
                                <label for="descServico">Descrição do serviço</label>
                            </div>
                        </div>
                    </div>

                    <h5 class="text-secondary mb-3 border-bottom pb-2 mt-4">Serviços</h5>
                    <div class="row g-2 mb-3 bg-light p-2 rounded">
                        <input type="hidden" id="servicoIdSelecionado">
                        <div class="col-md-8">
                            <div class="input-group">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="servicoNome" placeholder="Buscar Serviço" readonly>
                                    <label>Adicionar Novo Serviço</label>
                                </div>
                                <button class="btn btn-secondary" type="button" data-bs-toggle="modal" data-bs-target="#modalBuscaServico">
                                    <i class="fa-solid fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="servicoValor" placeholder="Valor">
                                <label>Valor (R$)</label>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <button type="button" class="btn btn-success w-100 py-3" id="btnAdicionarServico">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="table-responsive mb-4">
                        <table class="table table-striped table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Descrição do Serviço</th>
                                    <th width="150px">Valor (R$)</th>
                                    <th width="100px" class="text-center">Ação</th>
                                </tr>
                            </thead>
                            <tbody id="listaServicosAdicionados"></tbody>
                        </table>
                    </div>

                    <h5 class="text-secondary mb-3 border-bottom pb-2 mt-4">Equipamento</h5>
                    <input type="hidden" id="equipamentoIdSelecionado" value="<%= dadosOs.equipamento ? dadosOs.equipamento.ID_EQUIPAMENTO : '' %>">
                    <div class="row g-2 mb-3">
                        <div class="col-md-12">
                            <div class="input-group">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="equipamentoNome" readonly 
                                        value="<%= dadosOs.equipamento ? (dadosOs.equipamento.DESC_EQUIPAMENTO || dadosOs.equipamento.MODELO) : '' %>">
                                    <label>Equipamento selecionado</label>
                                </div>
                                <button class="btn btn-secondary" type="button" data-bs-toggle="modal" data-bs-target="#modalBuscaEquipamento">
                                    <i class="fa-solid fa-search"></i>
                                </button>
                            </div>
                        </div> 
                    </div>

                    <h5 class="text-secondary mb-3 border-bottom pb-2 mt-4">Produtos</h5>
                    <div class="row g-2 mb-3 align-items-center bg-light p-2 rounded">
                        <input type="hidden" id="produtoIdSelecionado">
                        <div class="col-md-6">
                            <div class="input-group">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="produtoNome" placeholder="Produto" readonly>
                                    <label>Adicionar Novo Produto</label>
                                </div>
                                <button class="btn btn-secondary" type="button" data-bs-toggle="modal" data-bs-target="#modalBuscaProduto">
                                    <i class="fa-solid fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="produtoValor" placeholder="Valor Un.">
                                <label>Valor Unit.</label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-floating">
                                <input type="number" class="form-control" id="produtoQtd" placeholder="Qtd" value="1">
                                <label>Qtd</label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-success w-100 py-3" id="btnAdicionarProduto">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="table-responsive mb-4">
                        <table class="table table-striped table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Produto</th>
                                    <th width="150px">Valor Unit.</th>
                                    <th width="100px" class="text-center">Qtd</th>
                                    <th width="150px">Subtotal</th>
                                    <th width="100px" class="text-center">Ação</th>
                                </tr>
                            </thead>
                            <tbody id="listaProdutosAdicionados"></tbody>
                        </table>
                    </div>

                    <div class="row justify-content-end my-3">
                        <div class="col-md-4">
                            <div class="card bg-light border-primary">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0 text-primary fw-bold">VALOR TOTAL:</h5>
                                    <h4 class="mb-0 text-primary fw-bold" id="labelValorTotal">R$ 0.00</h4>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">
                    <div class="d-flex justify-content-end gap-2">
                        <a href="/ordemServico/listar" class="btn btn-secondary btn-lg">
                            <i class="fa-solid fa-arrow-left me-2"></i>Voltar
                        </a>
                        <button type="button" id="btnSalvarAlteracoes" class="btn btn-primary btn-lg">
                            <i class="fa-solid fa-save me-2"></i>Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

