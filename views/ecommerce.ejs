<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />

<link href="/css/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">


<style>
    .btn-semear {
        background-color: #27812E;
        border-color: #27812E;
        color: #fff;
    }

    .btn-semear:hover {
        background-color: #1f6b25;
        border-color: #1f6b25;
        color: #fff;
    }

    #carrinhoLaterl {
        width: 250px !important;
    }
</style>
<!--carrinho-->
<div class="d-flex justify-content-end">
    <button class="btn btn-semear end m-3" type="button" data-bs-toggle="offcanvas" data-bs-target="#carrinhoLaterl">
        <i class="bi-cart-fill me-1"></i>
        Carrinho
        <span id="contadorCarrinho" class="badge bg-dark text-white ms-1 rounded-pill">0</span>
    </button>
</div>


<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            <% listaProdutos.map(function(value, index) { %>
                <div class="col mb-5">
                    <div class="card h-100">
                        <img class="card-img-top" src="<%= //value.produtoImagem %>" alt="Imagem do produto" />
                        <div class="card-body p-4">
                            <div class="text-center">
                                <div class="d-flex justify-content-center small mb-2">
                                    <%= value.marcaNome %>
                                </div>
                                <h5 class="fw-bolder">
                                    <%= value.produtoNome %>
                                </h5>
                                <div class="d-flex justify-content-center small mb-2">
                                    <%= // value.categoriaNome %>
                                </div>

                                R$ <%= value.valorVenda %>
                            </div>
                        </div>
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <button data-produto="<%= value.produtoId %>"
                                    class="btn btn-semear mt-auto addCarrinho">
                                    <i class="bi-cart-fill me-1"></i>
                                    Adicionar ao carrinho
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

</section>
<div class="offcanvas offcanvas-end" tabindex="-1" id="carrinhoLaterl">
    <div class="offcanvas-header align-items-start">
        <h3 class="offcanvas-title mt-4">Meu Carrinho</h3>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
    </div>

    <div class="offcanvas-body">
        <div id="listaCarrinho">
            <p class="text-muted">Nenhum item no carrinho.</p>
        </div>

        <div class="mt-4">
            <h5>Total: R$ <span id="totalCarrinho">0,00</span></h5>
        </div>

        <button class="btn btn-semear w-100 mt-3" id="btnFinalizarCompra">
            Finalizar Compra
        </button>
    </div>
</div>

